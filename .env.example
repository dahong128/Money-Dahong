# Copy to `.env` and fill in values.

# --- Binance (Spot) ---
BINANCE_API_KEY=
BINANCE_API_SECRET=

# --- Bot ---
SYMBOL=ETHUSDT
INTERVAL=1m
TRADING_MODE=dry_run  # dry_run|live
CONFIRM_LIVE_TRADING=  # set to YES to allow live trading

# --- Strategy (EMA Cross) ---
EMA_FAST_PERIOD=12
EMA_SLOW_PERIOD=26

# --- Risk (MVP defaults; tune later) ---
MAX_ORDER_NOTIONAL_USDT=25
COOLDOWN_SECONDS=60

# --- Telegram Alerts ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- Logging ---
LOG_LEVEL=INFO
